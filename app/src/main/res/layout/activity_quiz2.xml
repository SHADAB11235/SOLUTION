<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/b"
    tools:context="com.netcamp.sol.Quiz">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/q"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q.) Who is th First PRIME MINISTER of INDIA ?"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="normal|bold"
        android:visibility="visible"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAL BAHADUR SASHTRI"
            android:id="@+id/r1"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:textColor="#f95114"
            android:textStyle="bold"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JAWAHAR LAL NEHRU"
            android:id="@+id/r2"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:textColor="#f95114"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAHATMA GANDHI"
            android:id="@+id/r3"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:textColor="#f95114"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RAJENDRA PRASAD"
            android:layout_marginTop="5dp"
            android:id="@+id/r4"
            android:checked="false"
            android:textColor="#f95114"
            android:textStyle="bold"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:id="@+id/b1"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

    </RadioGroup>

</RelativeLayout>
